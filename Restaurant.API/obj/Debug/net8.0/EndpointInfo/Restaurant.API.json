          "Restaurant"
        ],
        "summary": "Create Restaurant",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateResturanctDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateResturanctDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateResturanctDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
