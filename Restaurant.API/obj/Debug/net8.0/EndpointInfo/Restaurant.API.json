    "version": "1.0"
  },
  "paths": {
    "/api/Restaurant": {
      "get": {
        "tags": [
          "Restaurant"
        ],
        "summary": "Get all Restaurants",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
